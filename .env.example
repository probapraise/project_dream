# Optional real-LLM provider (Google AI Studio / Gemini)
# Use Gemini for all test runs by filling API key + keeping provider/model below.
PROJECT_DREAM_LLM_PROVIDER=google
PROJECT_DREAM_LLM_MODEL=gemini-3.1-flash
GOOGLE_API_KEY=replace-with-google-ai-studio-key
GEMINI_API_KEY=$GOOGLE_API_KEY
# prompt_passthrough: probe Gemini once, then return prompt text (fast + deterministic tests)
# model_output: use actual Gemini output
PROJECT_DREAM_LLM_RESPONSE_MODE=prompt_passthrough
PROJECT_DREAM_LLM_TIMEOUT_SEC=60
PROJECT_DREAM_LLM_CACHE_PATH=.runtime/llm_cache.json

# Required
PROJECT_DREAM_API_TOKEN=replace-with-strong-token

# Optional serve defaults
PROJECT_DREAM_HOST=127.0.0.1
PROJECT_DREAM_PORT=8000
PROJECT_DREAM_RUNS_DIR=runs
PROJECT_DREAM_PACKS_DIR=packs
PROJECT_DREAM_VECTOR_BACKEND=memory
# PROJECT_DREAM_VECTOR_DB_PATH=runs/vectors.sqlite3

# Optional smoke-check default
PROJECT_DREAM_BASE_URL=http://127.0.0.1:8000
